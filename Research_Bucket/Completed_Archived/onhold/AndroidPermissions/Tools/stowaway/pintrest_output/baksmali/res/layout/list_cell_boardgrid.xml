        <com.pinterest.ui.imageview.PImageView android:id="@id/board_item1" style="@style/board_grid_thumb" />
        <com.pinterest.ui.imageview.PImageView android:id="@id/board_item2" style="@style/board_grid_thumb" />
        <com.pinterest.ui.imageview.PImageView android:id="@id/board_item3" style="@style/board_grid_thumb" />
        <com.pinterest.ui.imageview.PImageView android:id="@id/board_item4" android:layout_marginRight="0.0dip" style="@style/board_grid_thumb" />
    </LinearLayout>
    <View android:id="@id/divider" style="@style/list_cell_divider" />
    <TextView android:gravity="center" android:id="@id/follow_bt" android:background="@drawable/ab_selectable_background_tab" android:paddingBottom="2.0dip" android:layout_width="fill_parent" android:layout_height="@dimen/board_section_height" android:text="@string/follow" style="@style/board_follow" />
</LinearLayout>
