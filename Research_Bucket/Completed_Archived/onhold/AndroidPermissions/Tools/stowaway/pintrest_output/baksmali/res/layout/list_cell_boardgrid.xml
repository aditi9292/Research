<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:background="@drawable/grid_cell_background" android:layout_width="fill_parent" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView android:gravity="center" android:id="@id/title_tv" android:layout_height="@dimen/board_section_height" android:layout_marginLeft="@dimen/board_grid_padding" android:layout_marginRight="@dimen/board_grid_padding" style="@style/board_grid_title" />
