        <com.pinterest.ui.imageview.PImageView android:id="@id/board_cover" android:background="@color/ui_bg_medium_light" android:layout_width="fill_parent" android:layout_height="@dimen/board_grid_cover_height" android:scaleType="centerCrop" />
